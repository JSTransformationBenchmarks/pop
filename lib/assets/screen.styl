/* Variables */
light = #f5f5f5
dark = #1a1a1f
back = #fff

standard-font-size = 13px
small-font-size = 11px
header-font-size = 128.5%

/* Functions */
header-gradient()
  background: #cfd2d7
  background: -moz-linear-gradient(top, #cfd2d7 0%, #a3a8af 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#cfd2d7), color-stop(100%,#a3a8af))
  background: -webkit-linear-gradient(top, #cfd2d7 0%,#a3a8af 100%)
  background: -o-linear-gradient(top, #cfd2d7 0%,#a3a8af 100%)
  background: -ms-linear-gradient(top, #cfd2d7 0%,#a3a8af 100%)
  background: linear-gradient(top, #cfd2d7 0%,#a3a8af 100%)

glass-gradient()
  background: #f6f8f9
  background: -moz-linear-gradient(top, #f6f8f9 0%, #e5ebee 50%, #d7dee3 51%, #f5f7f9 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f6f8f9), color-stop(50%,#e5ebee), color-stop(51%,#d7dee3), color-stop(100%,#f5f7f9))
  background: -webkit-linear-gradient(top, #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%)
  background: -o-linear-gradient(top, #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%)
  background: -ms-linear-gradient(top, #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%)
  background: linear-gradient(top, #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%)

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

border-radius-top()
  -webkit-border-top-left-radius: arguments
  -webkit-border-top-right-radius: arguments
  -moz-border-radius-topleft: arguments
  -moz-border-radius-topright: arguments
  border-top-left-radius: arguments
  border-top-right-radius: arguments

emboss()
  -moz-box-shadow: inset 0 0 2px #fff, 0 0 5px rgba(0, 0, 0, 0.5)
  -webkit-box-shadow: inset 0 0 2px #fff, 0 0 5px rgba(0, 0, 0, 0.5) 
  box-shadow: inner 0 0 2px #fff, 0 0 5px rgba(0, 0, 0, 0.5)

big-shadow()
  box-shadow: 0 0 15px #000

lozenge()
  -webkit-border-radius: 10px
  -moz-border-radius: 10px
  border-radius: 10px
  background-color: #bbc4cc
  padding: 4px 8px
  text-decoration: none
  color: #fff
  font-weight: bold
  font-size: small-font-size
  font-family: "Helvetica Neue", arial, sans-serif
  text-shadow: rgba(0,0,0,0.3) 0 -1px, rgba(0,0,0,0.1) 0 1px

reset()
  margin: 0
  padding: 0

/* Styles */
body
  font-family: "Lucida Grande", Verdana, sans-serif
  margin: 0 auto
  padding-bottom: 2em
  word-spacing: 0.1em
  background-color: back
  max-width: 960px

h1, h2, h3, h4, p
  reset()

h1, h2, h3, h4
  font-size: header-font-size

#header
  margin: 10px 0 40px 0
  padding-bottom: 10px
  border-bottom: 3px solid #ced3d2

#header h1
  font-size: 50px
  color: dark

article
  margin: 0 0 20px 0
  padding-bottom: 10px
  background-color: light
  border-radius 5px
  border-color: light
  emboss()

article header
  margin-bottom: 10px

article header h1
  border-top: 1px solid #bbb
  margin: 0
  padding: 10px 0 5px 10px
  font-size: header-font-size

article header h1 a
  text-decoration: none
  color: black
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5)

article p
  reset()
  padding: 10px
  font-size: standard-font-size

article time, article .author, article .tags
  display: inline
  margin: 0 0 0 5px
  font-size: standard-font-size
  lozenge()

.tags a
  color: #fff
  text-decoration: none

article time
  margin-left: 10px

.read-more
  lozenge()

footer
  width: 100%
  margin: 80px 0 0 0
  padding-top: 20px
  border-top: 3px solid #ced3d2

footer p
  font-size: small-font-size
  text-align: right

